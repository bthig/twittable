<div class="container-fluid header">
<h1 style="padding:10px">Twitt<span class="able">able</span></h1>
</div>

<div class="container-fluid new-registration main">
  <div class="row">
    <div class="col-md-4 col-md-offset-4
                col-sm-6 col-sm-offset-3
                col-xs-10 col-xs-offset-1">

        <h2 style="text-align: center">NEW TWEET</h2>


          <%= form_for(@tweet) do |f| %>
            <!-- Check for Errors -->
                <% if @tweet.errors.any? %>
                  <div id="error_explanation">
                    <h2>
                      <%= pluralize(@tweet.errors.count, 'error') %> prohibited this tweet from being saved
                    </h2>

                    <!-- Loop through the errors and show them as a list -->
                    <ul>
                      <% @tweet.errors.full_messages.each do |error_message| %>
                        <li><%= error_message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

            <!-- Actual Form -->
              <div class="field form-group">
                <%= f.label :message %> <br>
                <%= f.text_field :message, class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.hidden_field :user_id, value: current_user.id %>
              </div>

              <div class="actions form-group" style="text-align: center">
                <%= f.submit "Submit", class: 'btn btn-success btn-space' %>
                <%= link_to 'Home', tweets_path, class: 'btn btn-danger btn-space' %>
              </div>
          <% end %>



          </div>
          </div>
          </div>